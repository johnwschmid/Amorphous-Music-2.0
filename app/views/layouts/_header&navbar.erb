<div class="container-fluid header">

  <a href="/">
    <%= image_tag("logo_black.png", class: "logo") %>
  </a>

  <div style="padding-top: 10px">
    <h5>A Sample Site By: John W. Schmid<h5>
    <h5>
      Github: <a href="https://github.com/johnwschmid" target="_blank">https://github.com/johnwschmid</a>
      <br>
      LinkedIn: <a href="https://www.linkedin.com/in/john-w-schmid/" target="_blank">https://www.linkedin.com/in/john-w-schmid/</a>
    </h5>
  </div>

  <p class="navbar-text float-right" style="margin-bottom: -25px; color: lightgray; padding-top: 0;">
    <% if user_signed_in? %>
      Logged in as <strong style="font-size: 12px"><%= current_user.email %></strong>.
      <br>
      <span class="float-right">
        <%= link_to 'Edit Profile', edit_user_registration_path, :class => 'navbar-link', style: "color: gray" %> |
        <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link', style: "color: gray" %>
      </span>
    <% else %>
      <span class="float-right">
        <%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link', style: "color: gray" %> |
        <%= link_to "Login", new_user_session_path, :class => 'navbar-link', style: "color: gray" %>
      </span>
    <% end %>
  </p>

</div>

<nav class="navbar navbar-expand-lg jiggy_navbar text-center">

    <ul class="nav navbar-nav custom_ul">
      <li class="nav-item">
        <% if controller.controller_name == 'pages' && params[:action] == 'music' %>
          <%= link_to "Home", root_path, class: "home-link" %>
        <% else %>
          <%= link_to "Music", music_path, class: "navi-link" %>
        <% end %>
      </li>
      <li class="nav-item">
        <% if controller.controller_name == 'pages' && params[:action] == 'events' %>
            <%= link_to "Home", root_path, class: "home-link" %>
          <% else %>
            <%= link_to "Events", events_path, class: "navi-link" %>
        <% end %>
      </li>
      <li class="nav-item">
        <% if controller.controller_name == 'pages' && params[:action] == 'dev' %>
            <%= link_to "Home", root_path, class: "home-link" %>
          <% else %>
            <%= link_to "Developer Info", dev_path, class: "navi-link" %>
        <% end %>
      </li>
    </ul>
    
</nav>